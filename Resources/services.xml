<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="frosh_share_basket.view_dir">%frosh_share_basket.plugin_dir%/Resources/views</parameter>
    </parameters>

    <services>
        <service id="modules"         synthetic="true" />

        <service class="Shopware\Components\Plugin\CachedConfigReader" id="frosh_share_basket.config" >
            <factory service="shopware.plugin.cached_config_reader" method="getByPluginName"/>
            <argument type="string">FroshShareBasket</argument>
        </service>

        <service class="FroshShareBasket\Components\ShareBasketService" id="frosh_share_basket.components.share_basket_service">
            <argument id="frosh_share_basket.config" type="service"/>
            <argument id="modules" type="service"/>
            <argument id="session" type="service"/>
            <argument id="models" type="service"/>
            <argument id="dbal_connection" type="service"/>
            <argument id="router" type="service"/>
            <argument id="shopware_storefront.context_service" type="service"/>
        </service>

        <service class="FroshShareBasket\Components\Gateway\Hydrator\BasketHydrator"
                 id="frosh_share_basket.components.gateway.hydrator.basket_hydrator">
        </service>

        <service class="FroshShareBasket\Components\Gateway\CustomerBasketGateway"
                 id="frosh_share_basket.components.gateway.customer_basket_gateway">
            <argument id="dbal_connection" type="service"/>
            <argument id="frosh_share_basket.components.gateway.hydrator.basket_hydrator" type="service"/>
        </service>

        <service class="FroshShareBasket\Components\Gateway\DeleteCustomerBasketGateway"
                 id="frosh_share_basket.components.gateway.delete_customer_basket_gateway">
            <argument id="dbal_connection" type="service"/>
        </service>

        <service class="FroshShareBasket\Components\Service\CustomerBasketService"
                 id="frosh_share_basket.components.service.customer_basket_service">
            <argument id="frosh_share_basket.components.gateway.customer_basket_gateway" type="service"/>
            <argument id="shopware_storefront.list_product_service" type="service"/>
            <argument id="session" type="service"/>
            <argument id="frosh_share_basket.components.gateway.delete_customer_basket_gateway" type="service"/>
        </service>


        <service class="FroshShareBasket\Subscriber\Account" id="frosh_share_basket.subscriber.account">
            <argument id="session" type="service"/>
            <argument id="shopware_storefront.context_service" type="service"/>
            <argument id="frosh_share_basket.components.share_basket_service" type="service"/>
            <argument id="frosh_share_basket.components.service.customer_basket_service" type="service"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service class="FroshShareBasket\Subscriber\Analytics" id="frosh_share_basket.subscriber.analytics">
            <argument>%frosh_share_basket.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service class="FroshShareBasket\Subscriber\TemplateRegistration" id="frosh_share_basket.subscriber.template_registration">
            <argument>%frosh_share_basket.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service class="FroshShareBasket\Subscriber\Checkout" id="frosh_share_basket.subscriber.checkout">
            <argument id="frosh_share_basket.components.share_basket_service" type="service"/>
            <argument id="session" type="service"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service class="FroshShareBasket\Subscriber\CronJob" id="frosh_share_basket.subscriber.cron_job">
            <argument id="dbal_connection" type="service"/>
            <argument id="frosh_share_basket.config" type="service"/>
            <tag name="shopware.event_subscriber"/>
        </service>

    </services>
</container>
